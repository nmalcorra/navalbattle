!!!
%html
	%head
		%title Batalla Naval - Partida
		%meta{:charset => "UTF-8"}
		%link{:href => "/vendor/bootstrap/css/bootstrap.css", :rel => "stylesheet"}
		%link{:href => "/vendor/bootstrap/css/bootstrap-theme.css", :rel => "stylesheet"}
		%meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
	%body
		.container
			.row
				.col-md-6
					%h1 Batalla Naval
				.col-md-6
					%br
					%a.btn.btn-primary.btn-lg.pull-right{:href => "/singoff"}
						Cerrar Sesi&oacute;n
					.pull-right
						&nbsp;&nbsp;
					%a.btn.btn-primary.btn-lg.pull-right{:href => "/home"}
						Inicio
			.row
				.text-primary.page-header
					%h2 Partida contra   #{@idplayer2}  
				%h3 Tablero aliado
				%h4 Ubica tus barcos
				%form{:action => "/ubicarbarcos/#{@idpart}/confirm", :method => "POST"}
					%table.table.table-bordered.table-hover.table-striped
						- @nums.each do |i|
							%tr
							- @letras.each do |j|
								- if i == nil && j == nil
									%th
								- else
									- if j == nil && i != nil
										%th.info
											#{i}
									- else 
										- if j != nil && i == nil 
											%th.info
												#{j}
										- else
											%td
												%input.checkbox{:type => "checkbox", :name => "check[#{j}#{i}]"}		
												%input{:type => "hidden", :name => "idpart"  ,:value =>@idpart }		
					%input.btn.btn-primary.btn-lg{:type => "submit", :value => "Continuar"}
				%br